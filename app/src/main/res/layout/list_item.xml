<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc7b9"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/id_textView"
        style="@style/idStyle"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/title_textView"
        android:layout_alignBottom="@+id/title_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="id" />

    <TextView
        android:id="@+id/title_textView"
        style="@style/TextViewStyle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/paly_Button"
        android:layout_toEndOf="@+id/id_textView"
        android:layout_toRightOf="@+id/id_textView"
        tools:text="song name" />

    <ImageButton
        android:id="@+id/paly_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/title_textView"
        android:layout_toRightOf="@+id/title_textView"
        android:src="@drawable/button_play" />

    <ImageButton
        android:id="@+id/pause_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/paly_Button"
        android:layout_toRightOf="@+id/paly_Button"
        android:src="@drawable/button_pause" />

    <ImageButton
        android:id="@+id/stop_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_textView"
        android:layout_toEndOf="@+id/pause_Button"
        android:layout_toRightOf="@+id/pause_Button"
        android:src="@drawable/button_stop" />

</RelativeLayout>